<% if @msg %>
  <h2 class="error"><%= @msg %></h2>
<% end %>
<form class="form" action="/teas" method="post">

  <label for="name"><h3>Name:</h3></label>
  <input type="text" name="name" required="true" class="text-box"><br>

  <label for="aka"><h3>Alternate Name:</h3></label>
  <input type="text" name="aka" required="true" class="text-box"><br>

  <label for="details"><h3>Details:</h3></label>
  <input type="text" name="details" required="true" class="text-box"><br><br>

  <p><input type="radio" name="oxidation" value="Black">Black</p>
  <p><input type="radio" name="oxidation" value="Green">Green</p>
  <p><input type="radio" name="oxidation" value="Oolong">Oolong</p>
  <p><input type="radio" name="oxidation" value="Puerh">Puerh</p>
  <p><input type="radio" name="oxidation" value="White">White</p>
  <p><input type="radio" name="oxidation" value="Yellow">Yellow</p>

  <h3><input type="submit" value="Create Tea" class="text-box"></h3>
</form>

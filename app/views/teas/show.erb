<h1><%=@tea.name%><em> ~ <%=@tea.aka if @tea.aka != "N/A"%></em></h1>

<h3><%=@tea.oxidation%></h3>
<p><%=@tea.details%></p>

<div class="tea posts">
  <h3>posts</h3>
  <ol>
    <% @tea.posts.each do |p| %>
      <li><strong><%=p.content%></strong> - </a><a href="/users/<%=p.user_id%>"><em><%=p.user.username%></em></a></li>
      <% if p.user_id == current_user.id %>
        <form action="/posts/<%=p.id%>/delete" method="post">
          <input type="hidden" name="_method" value="delete">
          <a href="/posts/<%=p.id%>/edit"><button type="button" name="button">edit</button></a>
          <input type="submit" value="delete">
        </form>
      <% end %>
    <%end%>
  </ol>
</div>

<br><br><br>

<form class="form" action="/posts" method="post">
  <input type="hidden" name="tea_id" value="<%= @tea.id %>"><input type="hidden" name="user_id" value="<%= current_user.id %>">
  <label><%=current_user.username%></label><br>
  <input type="text" name="content" required="true">
  <input type="submit" value="Add Post">
</form>

<br><br><br>

<% if owner?(@tea) %>
  <form action="/teas/<%=@tea.id%>/delete" method="post">
    <input type="hidden" name="_method" value="delete">
    <a href="/teas/<%=@tea.id%>/edit"><button type="button" name="button">Edit Tea</button></a>
    <input type="submit" value="Delete Tea">
  </form>
<% end %>
